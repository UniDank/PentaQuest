{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@stores/*": ["src/stores/*"],
      "@assets/*": ["src/assets/*"],
      "@gameassets/*": ["src/game/assets/*"],
      "@scenes/*": ["src/game/scenes/*"],
      "@components/*": ["src/components/*"],
      "@game/*": ["src/game/*"]
    },
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "importHelpers": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "typeRoots": [
    "./node_modules/phaser/types"
  ],
  "types": [
    "Phaser"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": [
    "src"
  ]
}
